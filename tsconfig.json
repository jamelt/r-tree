{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": true,
    "removeComments": true,
    "module": "commonjs",
    "outDir": "dist/",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts", "**/*.fixture.ts"]
}
